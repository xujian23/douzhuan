.itembox{
  background: #FFFFFF;
  box-shadow: 0 6rpx 12rpx 0 rgba(0,0,0,0.10);
  border-radius: 10rpx;
  width: 690rpx;
  padding: 60rpx 0;
  text-align: center;
  margin: 30rpx auto;
}
.pointText{
  font-size: 28rpx;
  color: #CCCCCC;
}
.point{
  font-size: 64rpx;
  color: #303030;
}
.payrecords{
  margin: 38rpx auto 0 auto;  
  font-size: 20rpx;
  color: #2D8EFF;
  border: 2rpx solid #2D8EFF;
  border-radius: 10rpx;
  padding: 5rpx 10rpx;
  width: 120rpx;
  height: 44rpx;
  line-height: 44rpx;
}
.text1,.text2{
  font-size: 24rpx;
  color: #CCCCCC;
  text-align: center;
  line-height: 40rpx;
  width: 559rpx;
  margin: 0 auto;
}
.text1{
  margin-top:60rpx; 
}
.primary{
  width: 690rpx;
  text-align: center;
  margin: 130rpx auto 0 auto;
  background: #303030;
  border-radius: 8rpx;
  height: 88rpx;
  line-height: 88rpx;
  color: #fff;
  position: relative;
  font-size: 28rpx;
}
.primarybtn{
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  opacity: 0;
}
.disabledBtn{
  width: 690rpx;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 28rpx;
  margin: 130rpx auto 0 auto;
   border-radius: 8rpx;
}

/*  form表单 */
.form{
  width:100%;
  height:100%;
  display:block;

}
.formbtn{
  position:absolute;
  width:100%;
  height:100%;
  left:0;
  top:0;
  opacity:0;
}

.formp{
  position: relative;
}
.getAuto{
  position: relative;
}
.getUserInfo{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: #ddd;
  opacity: 0;
  z-index: 10;
}
/*  弹窗  */
.popupBox{
  position: absolute;
  background: rgba(0,0,0,0.60);
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}
.popup{
  position: absolute;
  width: 530rpx;
  background: #fff;
  border-radius: 10rpx;
  left: 0;
  right: 0;
  margin: 0 auto;
  top: 400rpx;
  z-index: 10;
}
.pptitle{
  font-size:32rpx;
  text-align:center;
  margin:30rpx;
}
.ppdestext{
  text-align:center;
  font-size:30rpx;
  width:80%;
  margin:0 auto;
  color:#979797;
  margin-bottom:50rpx;
}
.btnBox{
  display:flex;
  justify-content:space-between;
  width: 100%;
  height: 88rpx;
}
.ppbtn{
  border:none;
  outline:none;
  width:50%;
  background:#fff;
  font-size:36rpx;
}