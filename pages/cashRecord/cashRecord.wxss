.recordsBox {
  background: #fff;
  box-shadow: 0 6rpx 12rpx 0 rgba(0, 0, 0, 0.10);
  border-radius: 10rpx;
  width: 630rpx;
  padding: 10rpx 30rpx 30rpx 30rpx;
  margin: 20rpx auto 0 auto;
}

.shopList {
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1rpx solid #ddd;
  padding: 20rpx 0;
}

.listDl {
  width: 33%;
}

.listDl2 {
  font-size: 28rpx;
  color: #303030;
}

.listDd {
  font-size: 20rpx;
  color: #979797;
}

.listDr {
  text-align: right;
  font-size: 28rpx;
}

.listDt, .listDd {
  width: 100%;
  height: 40rpx;
  line-height: 40rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
