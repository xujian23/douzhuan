/* pages/mycenter/mycenter.wxss */
.centerInfoBox{
  display:flex;
  align-items:center;
  justify-content:space-between;
  height:120rpx;
  background: #FFFFFF;
  width: calc(100% - 60rpx);
  padding: 40rpx 30rpx;
  box-shadow: 0 6px 8px 0 rgba(0,0,0,0.10);
  position: relative;
}
.getUserInfo{
  position: absolute;
  top: 0;
  left: 0;
  width: calc(100% - 220rpx);
  height: 100%;
  opacity: 0;
}
.userImageBox{
  width:120rpx;
  height:120rpx;
  display: inline-block;
}
.userAvatarurl{
  width:100%;
  height:100%;
  border-radius: 50%;
}
.leftPart{
  display:flex;
  align-items:center;
}
.description{
  display:inline-block;
  margin-left: 30rpx;
}
.title{
  font-size: 28rpx;
  color: #303030;
}
.des{
  font-size: 20rpx;
  color: #979797;
  margin-top:10rpx;
}
/* 分享按钮  */

.rightPart{
  position:relative;
  width:160rpx;
  height:44rpx;
  line-height: 44rpx;
  background: #2D8EFF;
  border-radius: 10rpx;
  text-align: center;
  font-size: 20rpx;
  color: #FFFFFF;
}
.sharebtn{
  position:absolute;
  width:100%;
  height:100%;
  left:0;
  top:0;
  opacity:0;
}
/* 三个显示信息框  */
.xxlist{
  display:flex;
  align-items:center;
  width: calc(100% - 60rpx);
  margin: 30rpx auto 30rpx;
  justify-content: space-around;
}

.itemDl{
  width:330rpx;
  height: 140rpx;
  text-align:center;
  position: relative;
  background: #FFFFFF;
  box-shadow: 0 6px 12px 0 rgba(0,0,0,0.10);
  border-radius: 10rpx;
  display: inline-flex;
  flex-wrap: wrap;
  flex-direction: column;
  justify-content: center;
}
.itemDt{
  font-size:36rpx;
  color: #303030;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  height: 40rpx;
  line-height: 40rpx;
  width: 100%;
}
.itemDd{
  font-size:20rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  height: 45rpx;
  line-height: 45rpx;
  width: 100%;
  color: #979797;
}
.putForward{
  position:absolute;
  top:calc(50% - 20rpx);
  right:10rpx;
  color:#979797;
  font-size:20rpx;
  display:inline-flex;
  align-items: center;
}
/* banner  */
.swiper{
  width:690rpx;
  height:140rpx;
  margin: 0 auto;
}
.navigator{
  width:100%;
  height:100%;
  display:block;
}
.bannerImage{
  width:100%;
  height:100%;
  position:absolute;
  border-radius: 10rpx;
}
.jingxuantitle{
  margin:20rpx 0;
  font-size: 20rpx;
  color: #CCCCCC;
  text-align: center;
}

/* 滚动视图  */
/* pages/触底加载更多/触底加载更多.wxss */
.pullDownlist{
  padding:30rpx 0;
  width:100%;
  margin:0 auto;
  border-bottom:1rpx solid #ddd;
  display:flex;
  align-items:center;
  justify-content:space-between;
}
.pd_itemDl{
  width:49%;
}
.pd_itemDt{
  font-size:28rpx;
  color: #303030;
}
.pd_itemDd{
  font-size:20rpx;
  color: #979797;
}
.pd_score{
  color: #CCCCCC;
}
.pd_itemDlR{
  text-align:right;
}
.scrollView{
  width: 630rpx;
  padding: 0 30rpx;
  margin: 0 auto;
  max-height: 480rpx;
  background: #FFFFFF;
  box-shadow: 0 6rpx 12rpx 0 rgba(0,0,0,0.10);
  border-radius: 10rpx;
}
.scrollView::-webkit-scrollbar {
    display: none;
}
.lookmore{
  text-align:center;
  height:100rpx;
  line-height:100rpx;
  font-size: 20rpx;
  color: #303030;
}


/* 投诉按钮  */
.complaint{
  position:fixed;
  z-index:100;
  right:0rpx;
  bottom:530rpx;
}
.complaintIcon{
  width:50rpx;
  height:50rpx;
  margin:0 20rpx;
}
.complaintText{
  color:#fff;
  font-size:32rpx;
}
/*  左箭头 */
.lefticon{
  width: 25rpx;
  height: 25rpx;
}


/*  form表单 */
.form{
  width:100%;
  height:100%;
  display:block;

}
.formbtn{
  position:absolute;
  width:100%;
  height:100%;
  left:0;
  top:0;
  opacity:0;
}

.formp{
  position: relative;
}
.formFlex{
  display:flex;
  align-items:center;
  justify-content:center;

}